			prev include/variables.h
			prev include/nval.h
			prev %{INCLUDE_AST}/ls.h
			prev include/fcin.h
			prev include/defs.h
			prev shopt.h
		done

		make sh/string.c
			prev %{INCLUDE_AST}/wctype.h
			prev include/national.h
			prev include/lexstates.h
			prev include/shtable.h
			prev %{INCLUDE_AST}/ccode.h
			prev include/defs.h
			prev %{INCLUDE_AST}/lc.h
			prev %{INCLUDE_AST}/ast_wchar.h
			prev %{INCLUDE_AST}/ast.h
			prev shopt.h
		done

		make sh/streval.c
			prev FEATURE/externs
			prev %{INCLUDE_AST}/error.h
			prev include/streval.h
			prev shopt.h
		done

		make sh/subshell.c
			prev include/path.h
			prev include/variables.h
			prev include/jobs.h
			prev include/shlex.h
			prev include/shnodes.h
			prev include/fault.h
			prev include/io.h
			prev %{INCLUDE_AST}/ls.h
			prev include/defs.h
			prev shopt.h
		done

		make sh/tdump.c
			prev %{INCLUDE_AST}/ccode.h
			prev include/io.h
			prev include/path.h
			prev include/shnodes.h
			prev include/defs.h
			prev shopt.h
		done

		make sh/timers.c
			prev FEATURE/time
			prev include/defs.h
			prev include/fault.h
			prev %{INCLUDE_AST}/error.h
			prev %{INCLUDE_AST}/sig.h
			prev %{INCLUDE_AST}/ast.h
			prev shopt.h
		done

		make sh/trestore.c
			prev %{INCLUDE_AST}/ccode.h
			prev include/io.h
			prev include/path.h
			prev include/shnodes.h
			prev include/defs.h
			prev shopt.h
		done

		make sh/waitevent.c
			prev include/defs.h
			prev shopt.h
		done

		make sh/xec.c
			prev include/streval.h
			prev FEATURE/locale
			prev FEATURE/externs
			prev FEATURE/time
			prev include/builtins.h
			prev include/test.h
			prev include/jobs.h
			prev include/shnodes.h
